generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  entries Entry[]
}

model Entry {
  id         String   @id @default(cuid())
  userId     String
  content    String
  sentiment  String
  emotions   String[]
  createdAt  DateTime @default(now())

  User       User     @relation(fields: [userId], references: [id])
}
