generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client" // âœ… Explicit output path
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid()) // local DB user id
  clerkId String  @unique // Clerk's user id
  email   String  @unique
  entries Entry[]
}

model Entry {
  id        String   @id @default(cuid())
  content   String
  tags      String[]
  sentiment String?
  emotions  String[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model JournalEntry {
  id        String   @id @default(cuid())
  content   String
  emotion   String
  userId    String
  createdAt DateTime @default(now())
}
